<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shivam.guftagoo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Guftagoo">
        <activity
            android:name=".ui.home.HomeActivity_new"
            android:label="@string/title_activity_home_new"
            android:theme="@style/Theme.Guftagoo.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.home.SettingsActivity"></activity>
        <activity android:name=".ui.home.EditProfileActivity"></activity>
        <activity android:name=".ui.walkthrough.WelcomeActivity">
        </activity>
        <activity
            android:name=".ui.onboarding.OnboardingActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ui.call.CallingActivity"></activity>
    </application>

</manifest>